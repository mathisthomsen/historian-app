# Production Environment Configuration
NODE_ENV=production

# Database
MYSQL_ROOT_PASSWORD=production_root_password_change_this
MYSQL_DATABASE=historian_app_production
MYSQL_USER=historian_production
MYSQL_PASSWORD=production_password_change_this
DATABASE_URL=mysql://historian_production:production_password_change_this@mysql:3306/historian_app_production

# JWT
JWT_SECRET=production_jwt_secret_key_change_this_to_very_long_random_string

# SMTP (Real SMTP service for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# NextAuth
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=production_nextauth_secret_change_this_to_very_long_random_string

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com 