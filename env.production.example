# Production Environment Configuration
NODE_ENV=production

# Database
MYSQL_ROOT_PASSWORD=production_root_password_change_this
MYSQL_DATABASE=historian_app_production
MYSQL_USER=historian_production
MYSQL_PASSWORD=production_password_change_this
DATABASE_URL="mysql://username:password@host:port/database"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# SMTP (Real SMTP service for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# NextAuth
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret"

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Email Configuration (Resend recommended)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Mendeley OAuth (if using)
MENDELEY_CLIENT_ID="your-mendeley-client-id"
MENDELEY_CLIENT_SECRET="your-mendeley-client-secret"

# Zotero OAuth (if using)
ZOTERO_CLIENT_ID="your-zotero-client-id"
ZOTERO_CLIENT_SECRET="your-zotero-client-secret"

# Optional: Analytics
NEXT_PUBLIC_GA_ID="your-google-analytics-id" 