# Production Environment Configuration
NODE_ENV=production

# Database (Neon - Both URLs Required)
DATABASE_URL="postgresql://username:password@ep-something-pooler.region.aws.neon.tech/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@ep-something.region.aws.neon.tech/database?sslmode=require"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# SMTP (Real SMTP service for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# NextAuth
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret"

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Strapi Configuration
NEXT_PUBLIC_STRAPI_URL=https://yourdomain.com
APP_KEYS="key1,key2,key3,key4"

# Email Configuration (Resend recommended)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Mendeley OAuth (if using)
MENDELEY_CLIENT_ID="your-mendeley-client-id"
MENDELEY_CLIENT_SECRET="your-mendeley-client-secret"

# Zotero OAuth (if using)
ZOTERO_CLIENT_ID="your-zotero-client-id"
ZOTERO_CLIENT_SECRET="your-zotero-client-secret"

# Optional: Analytics
NEXT_PUBLIC_GA_ID="your-google-analytics-id"

# WorkOS integration (set in deployment platform - Vercel, etc.)
WORKOS_API_KEY="your-workos-api-key-here"
WORKOS_CLIENT_ID="your-workos-client-id-here"
WORKOS_REDIRECT_URI="https://yourdomain.com/api/auth/callback"
WORKOS_COOKIE_PASSWORD="your-workos-cookie-password-here"

# AuthKit specific configuration
AUTHKIT_REDIRECT_URI="https://yourdomain.com/api/auth/callback" 