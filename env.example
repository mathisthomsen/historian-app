# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/historian_app"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Security
JWT_SECRET="your-super-secret-jwt-key-here"
ENCRYPTION_KEY="your-encryption-key-here"

# API Configuration
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_MS=300000
REDIS_URL="redis://localhost:6379"

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=".csv,.xlsx,.json"

# Development
NODE_ENV="development"
DEBUG="false"

# Email Configuration (for development, emails are logged to console)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@yourdomain.com"

# Mendeley OAuth Configuration
MENDELEY_CLIENT_ID="your-mendeley-client-id"
MENDELEY_CLIENT_SECRET="your-mendeley-client-secret"
MENDELEY_REDIRECT_URI="http://localhost:3000/api/auth/mendeley/callback"

# WorkOS integration (for local development only)
# For production, add these to your deployment platform (Vercel, etc.)
WORKOS_API_KEY=your-workos-api-key-here
WORKOS_CLIENT_ID=your-workos-client-id-here
WORKOS_REDIRECT_URI=http://localhost:3000/api/auth/callback
WORKOS_COOKIE_PASSWORD=your-workos-cookie-password-here 