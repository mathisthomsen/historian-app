# Database Configuration (Neon - Both URLs Required)
DATABASE_URL="postgresql://username:password@ep-something-pooler.region.aws.neon.tech/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@ep-something.region.aws.neon.tech/database?sslmode=require"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Security
JWT_SECRET="your-super-secret-jwt-key-here"
ENCRYPTION_KEY="your-encryption-key-here"

# Email Configuration (Resend.com)
RESEND_API_KEY="re_1234567890abcdef..."  # Development key
EMAIL_FROM="noreply@yourdomain.com"

# API Configuration
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_MS=300000
REDIS_URL="redis://localhost:6379"

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=".csv,.xlsx,.json"

# Development
NODE_ENV="development"
DEBUG="false"

# Mendeley OAuth Configuration
MENDELEY_CLIENT_ID="your-mendeley-client-id"
MENDELEY_CLIENT_SECRET="your-mendeley-client-secret"
MENDELEY_REDIRECT_URI="http://localhost:3000/api/auth/mendeley/callback"

# WorkOS integration (for local development only)
# For production, add these to your deployment platform (Vercel, etc.)
WORKOS_API_KEY=your-workos-api-key-here
WORKOS_CLIENT_ID=your-workos-client-id-here
WORKOS_REDIRECT_URI=http://localhost:3000/api/auth/callback
WORKOS_COOKIE_PASSWORD=your-workos-cookie-password-here

# AuthKit specific configuration
AUTHKIT_REDIRECT_URI=http://localhost:3000/api/auth/callback

