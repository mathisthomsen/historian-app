# Staging Environment Configuration
NODE_ENV=staging

# Database
MYSQL_ROOT_PASSWORD=staging_root_password
MYSQL_DATABASE=historian_app_staging
MYSQL_USER=historian_staging
MYSQL_PASSWORD=staging_password
DATABASE_URL=mysql://historian_staging:staging_password@mysql:3306/historian_app_staging

# JWT
JWT_SECRET=staging_jwt_secret_key_change_in_production

# SMTP (MailHog for staging)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@staging.historian-app.com

# NextAuth
NEXTAUTH_URL=https://staging.historian-app.com
NEXTAUTH_SECRET=staging_nextauth_secret_change_in_production

# App Configuration
NEXT_PUBLIC_APP_URL=https://staging.historian-app.com

# WorkOS integration (set in deployment platform - Vercel, etc.)
WORKOS_API_KEY="your-workos-api-key-here"
WORKOS_CLIENT_ID="your-workos-client-id-here"
WORKOS_REDIRECT_URI="https://staging.historian-app.com/api/auth/callback"
WORKOS_COOKIE_PASSWORD="your-workos-cookie-password-here" 