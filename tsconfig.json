{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/lib/*": [
        "./app/lib/*"
      ],
      "@/components/*": [
        "./app/components/*"
      ],
      "@/types/*": [
        "./app/types/*"
      ],
      "@/hooks/*": [
        "./app/hooks/*"
      ],
      "@/contexts/*": [
        "./app/contexts/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}